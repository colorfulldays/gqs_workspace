<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:textSize="10pt"/>

    <ImageView
        android:layout_marginTop="10dip"
        android:id="@+id/ivQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
         
    android:layout_gravity="center"
        />
        <ScrollView android:scrollbars="none" android:fadingEdge="none" android:layout_width="wrap_content" android:layout_height="wrap_content">
        
        <LinearLayout android:orientation="vertical" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
        
   <RadioGroup  
        android:id="@+id/radiogroup1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:orientation="vertical">

    <RadioButton
        android:id="@+id/rbA"
        android:textSize="8pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RadioButton
        android:id="@+id/rbB"
        android:textSize="8pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
    <RadioButton
        android:id="@+id/rbC"
         android:textSize="8pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />

    <RadioButton
        android:id="@+id/rbD"
        android:textSize="8pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RadioGroup>  
 </LinearLayout>
 </ScrollView>
 
</LinearLayout>